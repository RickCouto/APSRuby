<%= form_for Produto.new do |f| %>

<div class="container">
	<div class="form-group">
		<%= f.label :nome %>
		<%= f.text_field :nome, class: "form-control", required: true, minlength: 5 %>
	</div>

	<div class="form-group">
		<%= f.label :descricao %>
		<%= f.text_area :descricao, rows: 4, class: "form-control", required: true %>
	</div>

	<div class="form-inline">
		<div class="form-group">
			<%= f.label :quantidade %>
			<%= f.number_field :quantidade, step: 1, class: "form-control", required: true %>
		</div>

		<div class="form-group">
			<%= f.label :preco %>
			<%= f.number_field :preco, step: 0.01, class: "form-control", required: true %>
		</div>
	<%= f.submit "Criar produto", class: "btn btn-primary" %>
	</div>
</div>


<% end %>
</form>