	<table class="table table-bordered">
		<thead>
			<tr>
				<td>Nome</td>
				<td>Descrição</td>
				<td>Preço</td>
				<td>Quantidade</td>
				<td>Ação</td>
			</tr>
		</thead>
		<tbody>
			<% @produtos.each do |produto| %>
			<tr>
				<td><%= produto.nome %></td>
				<td><%= produto.descricao %></td>
				<td><%= produto.preco %></td>
				<td><%= produto.quantidade %></td>
				<td><%= button_to "Remover", produto, method: :delete, class: "btn btn-danger", data: { confirm: "Deseja remover permanentemente \"#{produto.nome}\"?"} %></td>
			</tr>
			<% end %>
		</tbody>
	</table>