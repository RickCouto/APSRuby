<!DOCTYPE html>
<html>
<head>
  <title>APS - Internet III</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= nav_bar brand: "Cadastro de Produtos", brand_link: root_url do %>
	<ul class="nav navbar-nav navbar-left">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Fornecedores <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Fornecedor 1</a></li>
            <li><a href="#">Fornecedor 2</a></li>
            <li><a href="#">Fornecedor 3</a></li>
          </ul>
        </li>
      </ul>
	<%= form_tag busca_produto_path, method: :get, class: "navbar-form 	navbar-right" do %>
		<div class="form-group">
			<%= text_field_tag :nome, @busca_a_buscar, class: "form-control" %>
			<%= button_to "Buscar", nil, class: "btn btn-default" %>
		</div>
	<% end %>
<% end %>
<div class="container">
	<%= yield %>
</div>
</body>
</html>
